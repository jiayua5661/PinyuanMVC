@{
	ViewData["Title"] = "訂單詳細資料";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
	<div class="col-md-8">
		<div>
			<div class="form-group my-2">
				<label asp-for="CompanyName" class="control-label"></label> : @Model.CompanyName
			</div>

			<div class="form-group my-2">
				<label asp-for="OrderDate" class="control-label"></label> : @Model.OrderDate
			</div>

			<div class="form-group my-2">
				<label asp-for="QuoteNumber" class="control-label"></label> : @Model.QuoteNumber
			</div>

			<h4 class="mt-3">訂單明細</h4>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>@Html.DisplayNameFor(model => model.OrderDetailDtos[0].ProductName)</th>
						<th>@Html.DisplayNameFor(model => model.OrderDetailDtos[0].Amount)</th>
						<th>@Html.DisplayNameFor(model => model.OrderDetailDtos[0].Price)</th>
					</tr>
				</thead>
				<tbody id="orderDetailsTableBody">
					@if (Model != null && Model.OrderDetailDtos != null && Model.OrderDetailDtos.Any())
					{
						for (int i = 0; i < Model.OrderDetailDtos.Count; i++)
						{
							<tr>
								<td>
									<div>@Model.OrderDetailDtos[@i].ProductName</div>
								</td>
								<td>
									<div>@Model.OrderDetailDtos[@i].Amount</div>
								</td>
								<td>
									<div>@Model.OrderDetailDtos[@i].Price</div>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>

		</div>
	</div>
</div>

<div>
	<a asp-action="Index">回訂單列表</a>
</div>